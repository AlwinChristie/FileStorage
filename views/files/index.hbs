<div class="m-3">
    <h1 class="heading my-4">Your Files</h1>
    <a class="btn btn-upload" href="/files/add">Upload</a>
    <section class="row m-4">
        {{#each files}}
            <div class="card my-1">
                <div class="card-body p-2 text-center d-flex align-items-center justify-content-between">
                    <div class="d-flex justify-content-between align-items-center col-2">
                        <h5 class="card-title m-0 filename">{{this.filename}}</h5>
                        <p class="m-0 description">{{this.description}}</p>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#" class="mx-2">
                            <button type="button" class="btn btn-success d-flex align-items-center">
                                <span class="material-symbols-outlined">download</span>
                            </button>
                        </a>
                        <a href="/files/edit/{{this._id}}" class="mx-2">
                            <button type="button" class="btn btn-primary d-flex align-items-center">
                                <span class="material-symbols-outlined">edit</span>
                            </button>
                        </a>
                        <a href="/files/delete/{{this._id}}" class="mx-2" onclick="return confirmDelete()">
                            <button type="button" class="btn btn-danger d-flex align-items-center">
                                <span class="material-symbols-outlined">delete</span>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </section>
</div>
